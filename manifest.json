{
  "manifest_version": 3,
  "name": "Threads 程式碼儲存器",
  "version": "1.1.0",
  "description": "智能識別並儲存 Threads 上的程式碼片段，支援手動更新最新的嵌入代碼",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.threads.net/*",
    "https://threads.net/*",
    "https://www.threads.com/*",
    "https://threads.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.net/*",
        "https://threads.net/*",
        "https://www.threads.com/*",
        "https://threads.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
    }
  }
